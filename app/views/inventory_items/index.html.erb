<h1>Listing inventory_items</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Lot size</th>
    <th>Buy price</th>
    <th>Sale price</th>
    <th>Inventory group</th>
    <th>Consumable</th>
    <th>Discount allowed</th>
    <th>Inventory unit of measurement</th>
  </tr>

<% @inventory_items.each do |inventory_item| %>
  <tr>
    <td><%=h inventory_item.name %></td>
    <td><%=h inventory_item.lot_size %></td>
    <td><%=h inventory_item.buy_price %></td>
    <td><%=h inventory_item.sale_price %></td>
    <td><%=h inventory_item.inventory_group_id %></td>
    <td><%=h inventory_item.consumable %></td>
    <td><%=h inventory_item.discount_allowed %></td>
    <td><%=h inventory_item.inventory_unit_of_measurement_id %></td>
    <td><%= link_to 'Show', inventory_item %></td>
    <td><%= link_to 'Edit', edit_inventory_item_path(inventory_item) %></td>
    <td><%= link_to 'Destroy', inventory_item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New inventory_item', new_inventory_item_path %>