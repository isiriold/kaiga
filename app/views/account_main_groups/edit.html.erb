<h1>Editing account_main_group</h1>

<% form_for(@account_main_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description, :cols => 30, :rows => 5 %>
  </p>
  <p>
    <%= f.label :is_p_and_l_acct %><br />
    <%= f.check_box :is_p_and_l_acct %>
  </p>
  <p>
    <%= f.label :account_group_type_id %><br />
    <%= f.select :account_group_type_id, account_group_type_options_array %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @account_main_group %> |
<%= link_to 'Back', account_main_groups_path %>
